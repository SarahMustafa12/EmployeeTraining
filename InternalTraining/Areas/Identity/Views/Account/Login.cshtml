@model InternalTraining.Models.ViewModel.LoginVm

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Login</title>

    <!-- Fonts and styles -->
    <link href="~/admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,300,400,600,700,800,900" rel="stylesheet" />
    <link href="~/admin/css/sb-admin-2.min.css" rel="stylesheet" />
    <link href="~/admin/css/custom.css" rel="stylesheet" />

    <style>
        .user-type-selection {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
            gap: 10px;
        }

        .user-type-card {
            cursor: pointer;
            border: 2px solid #e0e0e0;
            border-radius: 12px;
            padding: 0.8rem 1.2rem;
            min-width: 140px;
            transition: all 0.3s ease;
            background-color: #f8f9fc;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
            display: flex;
            align-items: center;
            gap: 0.8rem;
            user-select: none;
        }

            .user-type-card:hover {
                border-color: #143D60;
                background-color: #eef3fc;
            }

            .user-type-card input {
                display: none;
            }

        .icon {
            font-size: 2.2rem;
            transition: transform 0.3s ease;
            flex-shrink: 0;
        }

        /* تكبير الأيقونة لما يكون الراديو محدد */
        .user-type-card input:checked + .icon {
            transform: scale(1.3);
        }

        .label-text {
            font-size: 1rem;
            color: #4e4e4e;
            white-space: nowrap;
        }
    </style>
</head>

<body class="bg-gradient-primary">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                    </div>

                                    <form asp-action="Login" method="post" class="user">
                                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                                        <div class="form-group">
                                            <input asp-for="Email" class="form-control form-control-user" placeholder="Enter Email Address..." />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <input asp-for="Password" type="password" class="form-control form-control-user" placeholder="Password" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>

                                        <!-- choosing role -->
                                        <div class="form-group">
                                            <label class="font-weight-bold mb-3">Login as:</label>
                                            <div class="user-type-selection">
                                                <!-- Admin -->
                                                <label class="user-type-card" for="userTypeAdmin">
                                                    <input type="radio" asp-for="UserType" value="Admin" id="userTypeAdmin" />
                                                    <i class="fas fa-user-shield text-primary icon"></i>
                                                    <span class="label-text">Admin</span>
                                                </label>

                                                <!-- Company -->
                                                <label class="user-type-card" for="userTypeCompany">
                                                    <input type="radio" asp-for="UserType" value="Company" id="userTypeCompany" />
                                                    <i class="fas fa-building text-success icon"></i>
                                                    <span class="label-text">Company</span>
                                                </label>

                                                <!-- Employee -->
                                                <label class="user-type-card" for="userTypeEmployee">
                                                    <input type="radio" asp-for="UserType" value="Employee" id="userTypeEmployee" />
                                                    <i class="fas fa-user text-info icon"></i>
                                                    <span class="label-text">Employee</span>
                                                </label>
                                            </div>
                                            <span asp-validation-for="UserType" class="text-danger mt-2 d-block"></span>
                                        </div>

                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input asp-for="RememberMe" class="custom-control-input" id="RememberMe" />
                                                <label class="custom-control-label" for="RememberMe">Remember Me</label>
                                            </div>
                                        </div>

                                        <button type="submit" class="btn btn-primary btn-user btn-block">Login</button>

                                        <hr />
                                        <a href="@Url.Action("ExternalLogin", "Account", new { provider = "Google" })" class="btn btn-danger btn-user btn-block">
                                            <i class="fab fa-google fa-fw"></i> Login with Google
                                        </a>
                                    </form>

                                    <hr />
                                    <div class="text-center">
                                        <a class="small" asp-action="ForgetPassword" asp-controller="Account">Forgot Password?</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" asp-action="Register" asp-controller="Account">Create an Account!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/admin/js/sb-admin-2.min.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
</body>

</html>
