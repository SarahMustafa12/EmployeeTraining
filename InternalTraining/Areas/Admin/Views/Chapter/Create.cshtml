@model Chapter

<style>
    .dropdown-menu {
        max-height: 200px;
        overflow-y: auto;
    }
</style>

<div class="container my-3">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Add Chapter</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NumberOfLessons" class="form-label">Number of Lessons</label>
                            <input asp-for="NumberOfLessons" class="form-control" />
                            <span asp-validation-for="NumberOfLessons" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CourseId" class="form-label">Course</label>
                            <select asp-for="CourseId" class="form-control" asp-items="ViewBag.CourseId">
                                <option value="">-- Select Course --</option>
                            </select>
                            <span asp-validation-for="CourseId" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Add</button>
                        <a href="/Admin/Chapter" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
